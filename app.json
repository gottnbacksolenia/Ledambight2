{
  "expo": {
    "name": "AmbilightLED",
    "slug": "ambilight-led",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "ambilightled",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.ambilightled.app",
      "infoPlist": {
        "NSCameraUsageDescription": "Kamera, ekrandaki renkleri algılamak için kullanılır.",
        "NSBluetoothAlwaysUsageDescription": "Bluetooth, LED cihazlarla bağlantı kurmak için kullanılır.",
        "NSBluetoothPeripheralUsageDescription": "Bluetooth, LED cihazlarla bağlantı kurmak için kullanılır."
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#0A0E14",
        "foregroundImage": "./assets/images/icon.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.ambilightled.app",
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.BLUETOOTH",
        "android.permission.BLUETOOTH_ADMIN",
        "android.permission.BLUETOOTH_CONNECT",
        "android.permission.BLUETOOTH_SCAN",
        "android.permission.ACCESS_WIFI_STATE",
        "android.permission.CHANGE_WIFI_STATE",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION"
      ]
    },
    "web": {
      "output": "single",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#0A0E14",
          "dark": {
            "backgroundColor": "#0A0E14"
          }
        }
      ],
      "expo-web-browser",
      [
        "expo-camera",
        {
          "cameraPermission": "Kamera, ekrandaki renkleri algılamak için kullanılır."
        }
      ]
    ],
    "experiments": {
      "reactCompiler": true
    }
  }
}
